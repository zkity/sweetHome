<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_curtain_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/light_back"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/home_item_id"/>

    <ImageView
        android:id="@+id/home_curtain_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="1dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/curtain" />
    <TextView
        android:id="@+id/home_curtain_name"
        android:text="卧室窗帘"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"/>
    <SeekBar
        android:id="@+id/home_curtain_switch"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_weight="5" />
    <TextView
        android:layout_width="2dp"
        android:layout_marginLeft="15dp"
        android:layout_height="60dp" />
    </LinearLayout>

</LinearLayout>