<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeBG">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/white_back">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户信息"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="#000000" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/white_back"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/home_listview_logo"
            android:src="@drawable/girl"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            app:riv_oval="true"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="zk"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:textSize="20sp">
        </TextView>
        <ImageView
            android:id="@+id/info_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mores"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/white_back"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/locate"
                android:layout_gravity="center"
                android:layout_marginLeft="22dp"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="家庭所在地"
                android:layout_gravity="center"
                android:layout_marginLeft="22dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/info_locate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="N 38.6518 E 104.0764"
                android:textSize="16sp"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/info_locate_rf"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/refresh"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/white_back"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/iphone"
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="手机"
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/info_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="16608842381"
                android:textSize="16sp"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mail"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/info_mail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="zkity@icloud.com"
                android:textSize="16sp"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/white_back"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/mac"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="家路由"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/info_mac"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="20:47:47:72:de:ed"
                android:textSize="16sp"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/info_mac_rf"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/refresh"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>






</LinearLayout>