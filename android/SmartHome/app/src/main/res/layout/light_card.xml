<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_light_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/light_back"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/home_item_id"/>
        <ImageView
            android:id="@+id/home_light_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/bulb" />
        <TextView
            android:id="@+id/home_light_name"
            android:text="客厅灯"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"/>
        <Switch
            android:id="@+id/home_light_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="60dp"
            android:switchMinWidth="@dimen/switch_width"
            android:layout_weight="5" />

        <TextView
            android:layout_width="2dp"
            android:layout_marginLeft="15dp"
            android:layout_height="60dp" />
    </LinearLayout>






</LinearLayout>